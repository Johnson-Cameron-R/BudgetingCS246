<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout android:layout_height="wrap_content" app:rightEdgeSwipeOffset="0dp" app:leftEdgeSwipeOffset="0dp" android:id="@+id/swipe" android:layout_width="match_parent" android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="match_parent"
        android:id="@+id/bottom_wraper"
        android:layout_width="240dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <!--<TextView android:layout_height="match_parent" android:id="@+id/Edit" android:layout_width="1dp" android:textColor="#fff" android:text="Edit" android:gravity="center" android:background="#0076a5" android:layout_weight="1"/>-->

        <TextView
            android:layout_height="match_parent"
            android:id="@+id/Delete"
            android:layout_width="1dp"
            android:textColor="#fff"
            android:text="Delete"
            android:gravity="center"
            android:background="#ff0000"
            android:layout_weight="3"/>

    </LinearLayout>


    -<LinearLayout
    android:layout_height="match_parent"
    android:id="@+id/bottom_wrapper1"
    android:layout_width="match_parent"
    android:background="?android:selectableItemBackground"
    android:elevation="5dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="5">

        <ImageButton
            android:layout_height="match_parent"
            android:id="@+id/btnLocation"
            android:layout_width="90dp"
            android:gravity="center"
            android:background="@null"
            android:layout_weight="3.5"
            android:src="@android:drawable/ic_menu_info_details"/>

        <TextView
            android:id="@+id/descriptionTextViewExpensesHistory"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textAlignment="center" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="10"
        >
        <TextView
            android:id="@+id/dateTextViewExpensesHistory"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="3.5"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/categoryTextViewExpensesHistory"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/amountTextViewExpensesHistory"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="3.5"
            android:gravity="center"/>

    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>